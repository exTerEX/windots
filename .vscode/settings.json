{
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\r\n",
    "[powershell]": {},
    "[shellscript]": {
        "files.eol": "\n"
    },
    "[json][jsonc]": {
        "files.insertFinalNewline": false,
        "files.trimFinalNewlines": true,
        "editor.formatOnSave": false
    },
    "files.associations": {
        ".bash_*": "shellscript",
        "config": "properties",
        ".gitmessage": "git-commit",
        ".wslconfig": "shellscript",
    },
    "files.exclude": {
        "**/.git": true
    }
}