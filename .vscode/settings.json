{
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\r\n",
    "[powershell]": {},
    "[shellscript]": {
        "files.eol": "\n"
    },
    "[json]": {
        "editor.formatOnSave": false
    },
    "[jsonc]": {
        "files.trimFinalNewlines": false,
        "editor.formatOnSave": false
    },
    "files.associations": {
        ".bash_*": "shellscript"
    },
    "files.exclude": {
        "**/.git": true,
        "powertoys/**/*Interface": true,
        "powertoys/**/*Logs": true,
        "powertoys/PowerToys/*-*.json": true,
        "powertoys/PowerToys/*_*.json": true,
        "powertoys/PowerToys/UpdateState.json": true,
        "powertoys/**/*.log": true
    }
}
