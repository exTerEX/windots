* text=auto

# Documents
*.bibtex    text diff=bibtex
*.doc       binary diff=astextplain
*.docx      binary diff=astextplain
*.dot       binary diff=astextplain
*.pdf       binary diff=astextplain
*.rtf       binary diff=astextplain
*.md        text diff=markdown
*.tex       text diff=tex

# Spreadsheet
*.csv   text
*.tab   text
*.tsv   text
*.txt   text
*.sql   text

# Graphics
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.tif   binary
*.tiff  binary
*.ico   binary
*.svg   text
*.eps   binary

# Scripts
*.bash  text eol=lf
*.sh    text eol=lf
*.zsh   text eol=lf
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# Serialisation
*.json  text linguist-detectable
*.toml  text
*.xml   text
*.yaml  text linguist-detectable
*.yml   text linguist-detectable

# Archives
*.7z    binary
*.gz    binary
*.tar   binary
*.tgz   binary
*.zip   binary

# Misc.
*.pub       linguist-detectable

.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore

# Text files where line endings should be preserved
*.patch -text

# GPG exported private keys
gpg/*.gpg   filter=git-crypt diff=git-crypt

# SSH config and private keys
ssh/id_*        filter=git-crypt diff=git-crypt
ssh/id_*.pub    !filter !diff
ssh/config      filter=git-crypt diff=git-crypt

# PowerToys
powertoys/**/*.json eol=crlf

.gitattributes !filter !diff
